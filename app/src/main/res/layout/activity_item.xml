<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">

        <RelativeLayout
            android:layout_width="77dp"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_user_feed"
                android:layout_width="39dp"
                android:layout_height="39dp"
                android:layout_below="@+id/tv_feed_deadlift"
                android:layout_marginTop="5dp"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/tv_feed_username"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="User:"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_feed_text"
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_feed_username"
                android:text="Text:"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_feed_squat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_feed_text"
                android:text="S" />

            <TextView
                android:id="@+id/tv_feed_bench"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_feed_text"
                android:layout_marginStart="31dp"
                android:layout_toEndOf="@+id/tv_feed_squat"
                android:text="B" />

            <TextView
                android:id="@+id/tv_feed_deadlift"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_feed_text"
                android:layout_marginStart="31dp"
                android:layout_toEndOf="@+id/tv_feed_bench"
                android:text="D" />


        </RelativeLayout>

        <TextView
            android:id="@+id/textView"
            android:layout_width="303dp"
            android:layout_height="53dp"
            android:layout_weight="1"
            android:text="Today I bench 333, deadlifted 444, and squatted 351" />

    </LinearLayout>
</androidx.cardview.widget.CardView>