<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">

        <RelativeLayout
            android:layout_width="387dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_feed_username"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="User:"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_feed_text"
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_feed_username"
                android:text="Text:"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_feed_squat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_feed_text"
                android:text="S" />

            <TextView
                android:id="@+id/tv_feed_bench"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_feed_text"
                android:layout_marginStart="31dp"
                android:layout_toEndOf="@+id/tv_feed_squat"
                android:text="B" />

            <TextView
                android:id="@+id/tv_feed_deadlift"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_feed_text"
                android:layout_marginStart="31dp"
                android:layout_toEndOf="@+id/tv_feed_bench"
                android:text="D" />


        </RelativeLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>